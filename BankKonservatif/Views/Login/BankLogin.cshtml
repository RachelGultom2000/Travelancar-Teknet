<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bank Login</title>
    @Styles.Render("~/Content/bootstrap.css")
</head>
<body>
    <center><h2><b class="text-primary">Selamat Datang di Bank Konservatif</b></h2></center>
    <br />
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="col-md-4 col-sm-5">
                <div class="card" style="width:350px;height:250px;box-shadow: 1px 1px 8px rgba(0, 0, 0, 0.25);border-radius: 8px;">
                    <div class="card-body">
                        <h2 class="text-center"><b>Masuk</b></h2>
                        <form action="#" method="post" autocomplete="off">
                            <center>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="no_rek" placeholder="NIK/username" style="background: #E0E0E0;">
                                </div>
                            </center>
                            <center>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="pin" placeholder="PIN/password" style="background: #E0E0E0;">
                                </div>
                            </center>
                            <center><button type="submit" id="sendlogin" class="btn btn-success">Login</button></center>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
